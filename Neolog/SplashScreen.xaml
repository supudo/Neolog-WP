<UserControl x:Class="Neolog.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Width="480" Height="800">
        <ProgressBar HorizontalAlignment="Left" Margin="47,692,0,89" Name="progressBar" Width="383" IsIndeterminate="True" />
        <Image Height="40" HorizontalAlignment="Center" Margin="0,200,0,0" Name="imgLogo" Stretch="Fill" VerticalAlignment="Top" Width="150" DataContext="{Binding}" Source="/Neolog;component/Images/logo.png" />
        <TextBlock HorizontalAlignment="Center" Margin="0,656,0,114" Name="txtLoading" Text="Loading..." Width="480" Foreground="White" FontSize="22" TextAlignment="Center" />
    </Grid>

</UserControl>
